{% if color == 'light-gray' %}
  {% set color_class = 'text-gray-400' %}
{% elseif color == 'gray' %}
  {% set color_class = 'text-gray-500' %}
{% elseif color == 'dark-gray' %}
  {% set color_class = 'text-gray-700' %}
{% elseif color == 'dark-green' %}
  {% set color_class = 'text-green-800' %}
{% elseif color == 'light-green' %}
  {% set color_class = 'text-green-100' %}
{% endif %}

<div class="{{ color_class }}">
  {{ element }}
</div>
